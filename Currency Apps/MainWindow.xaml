<Window x:Class="Currency_Apps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency_Apps"
        mc:Ignorable="d"
        Title="MainWindow" Height="215" Width="151">
    <Grid HorizontalAlignment="Center" Width="141" Margin="0,0,0,17">
        <Label x:Name="label" Content="USD" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Margin="10,36,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" UndoLimit="100"/>
        <Button x:Name="button" Content="HITUNG" HorizontalAlignment="Left" Margin="10,78,0,0" VerticalAlignment="Top" Click="Button_Hitung_Click" Width="120"/>
        <Label Content="Nilai Tukar Rupiah" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top"/>
        <Label x:Name="resultLabel" Content="0" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
